  <script>
    var xhr = new XMLHttpRequest()
    xhr.open('POST','./add.php')
    // xhr.setRequestHeader('Foo','Bar')
    xhr.setRequestHeader('Content-Type','application/x-www-form-urlencode')
    xhr.send('key1=value&key2=value2')
  </script>
  
